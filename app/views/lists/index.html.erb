<div class="banner">
  <div class="container">
    <h1>Movie Watchlist</h1>
  </div>
</div>
<div class="container mt-4 mb-5">
  <div class="d-flex justify-content-between align-items-center">
    <h3>My Lists</h3>
    <%= link_to "<i class='fas fa-plus me-2'></i>Create a list".html_safe, new_list_path, class: "add-link" %>
  </div>
  <div class="cards">
    <% @lists.each do |list| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= list.photo.attached? ? cl_image_path(list.photo.key) : list.image_url %>)">
        <%= list.name %>
        <%= link_to "", list_path(list) %>
      </div>
    <% end %>
  </div>
  <div class="d-flex justify-content-between align-items-center mt-3">
    <h3>Movies</h3>
    <%= link_to "<i class='fas fa-plus me-2'></i>Add a new movie".html_safe, new_movie_path, class: "add-link" %>
  </div>
  <div class="cards">
    <% @movies.each do |movie| %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= movie.poster_url %>)">
        <%= movie.title %>
        <%= link_to "", movie_path(movie) %>
      </div>
    <% end %>
  </div>
</div>
